{
  "version": "3.9",
  "services": {
    "grimoire": {
      "image": "goniszewski/grimoire:0.5.0",
      "container_name": "grimoire",
      "restart": "unless-stopped",
      "environment": {
        "PORT": "2007",
        "PUBLIC_HTTPS_ONLY": "false",
        "PUBLIC_SIGNUP_DISABLED": "false"
      },
      "volumes": {
        "grimoire_data": "/app/data/"
      },
      "ports": ["2007:5173"],
      "healthcheck": {
        "test": ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:2007/api/health"],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    }
  },
  "volumes": {
    "grimoire_data": {}
  }
}
