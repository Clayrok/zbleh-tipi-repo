{
  "services": [
    {
      "name": "grimoire",
      "image": "goniszewski/grimoire:0.5.0",
      "environment": {
        "PORT": "2007",
        "PUBLIC_HTTPS_ONLY": "false",
        "PUBLIC_SIGNUP_DISABLED": "false"
      },
      "internalPort": 5173,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}",
          "containerPath": "/app/data/"
        }
      ],
      "healthcheck": {
        "test": [
          "CMD",
          "wget",
          "--no-verbose",
          "--tries=1",
          "--spider",
          "http://localhost:2007/api/health"
        ],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    }
  ]
}
